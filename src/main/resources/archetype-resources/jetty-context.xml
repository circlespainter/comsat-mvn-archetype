<?xml version="1.0"  encoding="UTF-8"?>
<!DOCTYPE Configure PUBLIC "-//Jetty//Configure//EN" "http://www.eclipse.org/jetty/configure.dtd">
<Configure id='ctx' class="org.eclipse.jetty.webapp.WebAppContext">
    <Set name="contextPath">/${artifactId}</Set>
    <Set name="war"><SystemProperty name="war.location"/></Set>
    <Set name="extractWAR">true</Set>
    <Set name="defaultsDescriptor"><SystemProperty name="config.home" default="."/>/etc/webdefault.xml</Set>

    <!-- REF https://www.eclipse.org/jetty/documentation/current/jetty-classloading.html -->
    <!-- Set name="parentLoaderPriority">true</Set -->
    <!-- Load the webApp with class loader for instrumentation purposes-->
    <Set name="classLoader">
        <New class="co.paralleluniverse.comsat.jetty.QuasarWebAppClassLoader">
            <Arg>
                <Ref id="ctx"/>
            </Arg>
        </New>
    </Set>
</Configure>